<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="mvnBuildRunner"
		class="chap01.MavenBuildRunner">
		<property name="mavenPath">
			<value>C:\Program Files\Java\apache-maven-3.3.9</value>
		</property>
	</bean>	

	<bean id="sampleProject"
		class="chap01.Project">
		<property name="srcDirs">
			<list>
				<value>src</value>
				<value>srcResource</value>
			</list>
		</property>
		<property name="binDir" value="bin/"/>
		<property name="buildRunner">
			<ref bean="mvnBuildRunner"/>
		</property>
	</bean>
</beans>
